{
    "name": "Heatmap",
    "description": "A heatmap with data binding support",
    "eula": "",
    "vendor": "",
    "license": "",
    "id": "com.sap.sample.heatmap",
    "newInstancePrefix": "Heatmap",
    "version": "1.0.0",
    "supportsLinkedAnalysisFilterOnSelection": true,
    "webcomponents": [
        {
            "kind": "main",
            "tag": "com-sap-sample-heatmap",
            "url": "https://belindaxo.github.io/heatmap-custom-widget/dist/bundle.js",
            "integrity": "sha256-IkUhdeVjAfYie2lHZCDhKOF6cL60xnqA0hOF9zJf/hs=",
            "ignoreIntegrity": false
        },
        {
            "kind": "styling",
            "tag": "com-sap-sample-heatmap-aps",
            "url": "https://belindaxo.github.io/heatmap-custom-widget/dist/bundle.js",
            "integrity": "sha256-IkUhdeVjAfYie2lHZCDhKOF6cL60xnqA0hOF9zJf/hs=",
            "ignoreIntegrity": false
        }
    ],
    "properties": {
        "width": {
            "type": "integer",
            "default": 600
        },
        "height": {
            "type": "integer",
            "default": 400
        },
        "chartTitle": {
            "type": "string",
            "description": "The title of the chart",
            "default": ""
        },
        "titleSize": {
            "type": "string",
            "description": "The font size of the title",
            "default": "16px"
        },
        "titleFontStyle": {
            "type": "string",
            "description": "The font style of the title",
            "default": "bold"
        },
        "titleAlignment": {
            "type": "string",
            "description": "The alignment of the title",
            "default": "left"
        },
        "titleColor": {
            "type": "string",
            "description": "The color of the title text",
            "default": "#004B8D"
        },
        "chartSubtitle": {
            "type": "string",
            "description": "The subtitle of the chart",
            "default": ""
        },
        "subtitleSize": {
            "type": "string",
            "description": "The font size of the subtitle text",
            "default": "11px"
        },
        "subtitleFontStyle": {
            "type": "string",
            "description": "The font style of the subtitle text",
            "default": "normal"
        },
        "subtitleAlignment": {
            "type": "string",
            "description": "The alignment of the subtitle text",
            "default": "left"
        },
        "subtitleColor": {
            "type": "string",
            "description": "The color of the subtitle text",
            "default": "#000000"
        },
        "showAxisTitles": {
            "type": "boolean",
            "description": "Whether to show axis titles",
            "default": true
        },
        "axisTitleSize": {
            "type": "string",
            "description": "The font size of the axis titles",
            "default": "14px"
        },
        "axisTitleColor": {
            "type": "string",
            "description": "The color of the axis titles",
            "default": "#000000"
        },
        "scaleFormat": {
            "type": "string",
            "description": "The scale of the numbers (unformatted, k, m, b)",
            "default": "unformatted"
        },
        "decimalPlaces": {
            "type": "integer",
            "description": "The number of decimal places to display",
            "default": 2
        },
        "showDataLabels": {
            "type": "boolean",
            "description": "Whether to show data labels",
            "default": true
        },
        "allowOverlap": {
            "type": "boolean",
            "description": "Whether to allow overlapping of data labels",
            "default": false
        },
        "xTopN": {
            "type": "integer",
            "description": "The number of top categories to include in the heatmap for the X-Axis. If not specified, all categories will be included."
        },
        "yTopN": {
            "type": "integer",
            "description": "The number of top categories to include in the heatmap for the Y-Axis. If not specified, all categories will be included."
        },
        "minColor": {
            "type": "string",
            "description": "The color for the minimum value",
            "default": "#99CFFF"
        },
        "maxColor": {
            "type": "string",
            "description": "The color for the maximum value",
            "default": "#004B8D"
        }
    },
    "methods": {
        "getHeatmapMembers": {
            "description": "Returns the members of the specified feed of the chart.",
            "returnType": "string[]"
        },
        "getHeatmapDimensions": {
            "description": "Returns the dimensions of the chart.",
            "returnType": "string[]"
        },
        "removeHeatmapMember": {
            "description": "Removes a member from the chart.",
            "parameters": [
                {
                    "name": "memberId",
                    "type": "string",
                    "description": "The ID of the member to remove."
                }
            ]
        },
        "removeHeatmapDimension": {
            "description": "Removes a dimension from the chart.",
            "parameters": [
                {
                    "name": "dimensionId",
                    "type": "string",
                    "description": "The ID of the dimension to remove."
                }
            ]
        },
        "addHeatmapMember": {
            "description": "Adds the specified member to the chart.",
            "parameters": [
                {
                    "name": "memberId",
                    "type": "string",
                    "description": "The ID of the member to add."
                }
            ]
        },
        "addHeatmapDimension": {
            "description": "Adds the specified dimension to the chart.",
            "parameters": [
                {
                    "name": "dimensionId",
                    "type": "string",
                    "description": "The ID of the dimension to add."
                }
            ]
        }
    },
    "events": {

    },
    "dataBindings": {
        "dataBinding": {
            "feeds": [
                {
                    "id": "dimensions",
                    "description": "Dimensions",
                    "type": "dimension"
                },
                {
                    "id": "measures",
                    "description": "Measures",
                    "type": "mainStructureMember"
                }
            ]
        }
    }
}